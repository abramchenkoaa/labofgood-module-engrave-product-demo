<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="engrave_product" translate="label" showInDefault="1" showInStore="0" showInWebsite="1">
            <label>Engrave Product</label>
            <tab>catalog</tab>
            <resource>Labofgood_EngraveProduct::general</resource>
            <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="display_engraving_option" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Display engraving option</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>
                        <![CDATA[When the configuration is enabled, it becomes possible to add engravings for the
                        product on the product detail page (PDP).]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>
